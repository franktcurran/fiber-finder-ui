{{#paper-toolbar as |toolbar|}}
  {{#paper-toolbar-tools}}Results{{/paper-toolbar-tools}}
{{/paper-toolbar}}
{{#paper-content padding=true}}
  {{#if isLoading}}
    Searching for Providers...
    {{paper-progress-circular}}
  {{else}}
    <span class="light">
      {{{message}}}
    </span>

    {{#if providers}}
      {{#paper-list}}
        {{#each providers as |provider|}}
            {{#paper-item onClick=(action resultSelected provider) class="md-3-line"}}
                <div class='collection-item'>
                <div class="md-list-item-text">
                  <h3>{{provider.name}}</h3>
                  <h4>Distance: {{provider.distance}} meters</h4>
                </div>
                </div>
            {{/paper-item}}
        {{/each}}
      {{/paper-list}}
    {{/if}}
  {{/if}}
{{/paper-content}}
