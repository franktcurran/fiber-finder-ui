{{search-input addressSelected=(action addressSelected) updateCenter=(action 'updateCenter')}}

{{#leaflet-map lat=lat lng=lng zoom=zoom onLoad=(action "mapLoaded")}}
  {{tile-layer url="https://server.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer/tile/{z}/{y}/{x}"}}
  {{#if markerPosition}}
    {{marker-layer lat=markerPosition.lat lng=markerPosition.lng}}
  {{/if}}
  {{#each geoJSONs as |geoJSON|}}
    {{geojson-layer geoJSON=geoJSON.geo color=geoJSON.color}}
  {{/each}}
{{/leaflet-map}}
